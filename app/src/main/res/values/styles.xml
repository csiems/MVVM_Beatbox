<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/dark_red</item>
        <item name="colorAccent">@color/gray</item>

        <item name="android:windowBackground">@color/soothing_blue</item>
        <item name="buttonStyle">@style/BeatBoxButton</item>
        <item name="seekBarStyle">@style/BeatBoxSeekbar</item>



    </style>

    <style name="AppTheme.SplashTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="BeatBoxButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_beat_box</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BeatBoxSeekbar" parent="Widget.AppCompat.SeekBar">
        <item name="android:background">@color/black</item>
    </style>

</resources>
